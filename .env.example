# Environment Configuration
ENVIRONMENT=development

# MetaTrader 5 Configuration
MT5_SERVER=Demo-Server
MT5_LOGIN=12345678
MT5_PASSWORD=your_mt5_password_here
MT5_TIMEOUT=10000

# Database Configuration
# PostgreSQL
DATABASE_URL=postgresql://trading_bot:password@localhost:5432/fibonacci_trading_bot
DB_PASSWORD=your_secure_db_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Trading Configuration
RISK_PER_TRADE=0.01
MAX_POSITIONS=5
MAX_DAILY_LOSS=0.06

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring and Alerts
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=8080
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Machine Learning Configuration
MODEL_RETRAIN_DAYS=30
FEATURE_LOOKBACK=100
VALIDATION_SPLIT=0.2
RANDOM_STATE=42

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_EMAIL_TO=alerts@yourcompany.com

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COINGECKO_API_KEY=

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_ML_PREDICTIONS=true
ENABLE_SESSION_ANALYSIS=true
ENABLE_RISK_MANAGEMENT=true

# Performance Tuning
MAX_WORKERS=4
BATCH_SIZE=1000
CACHE_TTL=3600
CONNECTION_POOL_SIZE=20

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Sentry Error Tracking (optional)
SENTRY_DSN=

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Timezone Configuration
TIMEZONE=UTC

# Development Tools
JUPYTER_TOKEN=
STREAMLIT_SERVER_PORT=8501

# Testing Configuration
TEST_MT5_SERVER=Demo-Test-Server
TEST_MT5_LOGIN=87654321
TEST_MT5_PASSWORD=test_password